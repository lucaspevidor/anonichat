// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  username      String    @unique
  pwd_hash      String

  rooms         Room[]    @relation("members", fields: [roomIDs], references: [id])
  roomIDs       String[]  @db.ObjectId

  ownedRooms    Room[]    @relation("owner")

  messages      Message[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Room {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String

  members       User[]    @relation("members", fields: [memberIDs], references: [id])
  memberIDs     String[]  @db.ObjectId

  owner         User      @relation("owner", fields: [ownerId], references: [id])
  ownerId       String    @db.ObjectId
}

model Message {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  sender        User      @relation(fields: [senderName], references: [username])
  senderName    String
  content       String
  createdAt     DateTime  @default(now())
}